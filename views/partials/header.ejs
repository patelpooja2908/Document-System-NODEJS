<!-- Search and Sort -->
<div class="container">
  <div class="sort-options">
      <div class="form-check">
          <input class="form-check-input" type="radio" name="sortOptions" id="sortByName" value="name">
          <label class="form-check-label" for="sortByName">
              Sort by Name (A-Z)
          </label>
      </div>
      <div class="form-check">
          <input class="form-check-input" type="radio" name="sortOptions" id="sortByLatest" value="latest">
